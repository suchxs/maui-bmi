<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_bmi.MainPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource OffBlack}}">

    <ScrollView>
        <VerticalStackLayout Padding="24,40,24,24" Spacing="16">
            <Label
                Text="BMI Calculator"
                FontFamily="OpenSansSemibold"
                FontSize="34"
                TextColor="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}"
                HorizontalTextAlignment="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Enter your height and weight to see your Body Mass Index and category."
                FontFamily="OpenSansRegular"
                FontSize="15"
                TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                HorizontalTextAlignment="Center" />

            <Border
                Padding="20"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                StrokeShape="RoundRectangle 20"
                HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="14">
                    <Label
                        Text="Unit System"
                        FontFamily="OpenSansSemibold"
                        FontSize="14"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />

                    <Border
                        Padding="12,0"
                        HeightRequest="52"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"
                        StrokeShape="RoundRectangle 12">
                        <Picker
                            x:Name="UnitPicker"
                            HeightRequest="52"
                            SelectedIndex="0"
                            SelectedIndexChanged="OnUnitChanged"
                            Title="Select units">
                            <Picker.Items>
                                <x:String>Metric (cm, kg)</x:String>
                                <x:String>Imperial (in, lb)</x:String>
                            </Picker.Items>
                        </Picker>
                    </Border>

                    <Label
                        x:Name="HeightLabel"
                        Text="Height (cm)"
                        FontFamily="OpenSansSemibold"
                        FontSize="14"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />

                    <Border
                        Padding="12,0"
                        HeightRequest="52"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"
                        StrokeShape="RoundRectangle 12">
                        <Entry
                            x:Name="HeightEntry"
                            HeightRequest="52"
                            Placeholder="e.g. 175"
                            Keyboard="Numeric"
                            ClearButtonVisibility="WhileEditing" />
                    </Border>

                    <Label
                        x:Name="WeightLabel"
                        Text="Weight (kg)"
                        FontFamily="OpenSansSemibold"
                        FontSize="14"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />

                    <Border
                        Padding="12,0"
                        HeightRequest="52"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"
                        StrokeShape="RoundRectangle 12">
                        <Entry
                            x:Name="WeightEntry"
                            HeightRequest="52"
                            Placeholder="e.g. 70"
                            Keyboard="Numeric"
                            ClearButtonVisibility="WhileEditing" />
                    </Border>

                    <Button
                        Text="Calculate BMI"
                        FontFamily="OpenSansSemibold"
                        Margin="0,6,0,0"
                        Clicked="OnCalculateClicked" />

                    <Label
                        x:Name="ResultLabel"
                        Text="BMI: -"
                        FontFamily="OpenSansSemibold"
                        FontSize="20"
                        TextColor="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}"
                        HorizontalTextAlignment="Center"
                        Margin="0,8,0,0" />

                    <Border
                        x:Name="CategoryBadge"
                        Padding="12,8"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        StrokeShape="RoundRectangle 12"
                        HorizontalOptions="Center"
                        Margin="0,2,0,0">
                        <Label
                            x:Name="CategoryLabel"
                            Text="Category: -"
                            FontFamily="OpenSansSemibold"
                            FontSize="15"
                            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray900}}"
                            HorizontalTextAlignment="Center" />
                    </Border>

                    <Label
                        Text="BMI legend"
                        FontFamily="OpenSansSemibold"
                        FontSize="13"
                        TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                        HorizontalTextAlignment="Center"
                        Margin="0,8,0,0" />

                    <Grid
                        ColumnDefinitions="*,*"
                        RowDefinitions="Auto,Auto"
                        ColumnSpacing="10"
                        RowSpacing="10">
                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="10,6"
                            BackgroundColor="{StaticResource BmiUnderweight}"
                            StrokeShape="RoundRectangle 10">
                            <Label
                                Text="Underweight (&lt; 18.5)"
                                FontFamily="OpenSansRegular"
                                FontSize="12"
                                TextColor="{StaticResource Gray900}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="10,6"
                            BackgroundColor="{StaticResource BmiNormal}"
                            StrokeShape="RoundRectangle 10">
                            <Label
                                Text="Normal (18.5–24.9)"
                                FontFamily="OpenSansRegular"
                                FontSize="12"
                                TextColor="{StaticResource Gray900}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="10,6"
                            BackgroundColor="{StaticResource BmiOverweight}"
                            StrokeShape="RoundRectangle 10">
                            <Label
                                Text="Overweight (25–29.9)"
                                FontFamily="OpenSansRegular"
                                FontSize="12"
                                TextColor="{StaticResource Gray900}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="10,6"
                            BackgroundColor="{StaticResource BmiObese}"
                            StrokeShape="RoundRectangle 10">
                            <Label
                                Text="Obese (≥ 30)"
                                FontFamily="OpenSansRegular"
                                FontSize="12"
                                TextColor="{StaticResource Gray900}" />
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
