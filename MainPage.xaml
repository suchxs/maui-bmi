<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_bmi.MainPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource OffBlack}}">

    <ScrollView>
        <VerticalStackLayout Padding="24,40,24,24" Spacing="16">
            <Label
                Text="BMI Calculator"
                FontFamily="OpenSansSemibold"
                FontSize="34"
                TextColor="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}"
                HorizontalTextAlignment="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Enter your height and weight to see your Body Mass Index and category."
                FontFamily="OpenSansRegular"
                FontSize="15"
                TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                HorizontalTextAlignment="Center" />

            <Border
                Padding="20"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                StrokeShape="RoundRectangle 20"
                HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="14">
                    <Label
                        Text="Height (cm)"
                        FontFamily="OpenSansSemibold"
                        FontSize="14"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />

                    <Border
                        Padding="12,2"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"
                        StrokeShape="RoundRectangle 12">
                        <Entry
                            x:Name="HeightEntry"
                            Placeholder="e.g. 175"
                            Keyboard="Numeric"
                            ClearButtonVisibility="WhileEditing" />
                    </Border>

                    <Label
                        Text="Weight (kg)"
                        FontFamily="OpenSansSemibold"
                        FontSize="14"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />

                    <Border
                        Padding="12,2"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"
                        StrokeShape="RoundRectangle 12">
                        <Entry
                            x:Name="WeightEntry"
                            Placeholder="e.g. 70"
                            Keyboard="Numeric"
                            ClearButtonVisibility="WhileEditing" />
                    </Border>

                    <Button
                        Text="Calculate BMI"
                        FontFamily="OpenSansSemibold"
                        Margin="0,6,0,0"
                        Clicked="OnCalculateClicked" />

                    <Label
                        x:Name="ResultLabel"
                        Text="BMI: -"
                        FontFamily="OpenSansSemibold"
                        FontSize="20"
                        TextColor="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}"
                        HorizontalTextAlignment="Center"
                        Margin="0,8,0,0" />

                    <Label
                        x:Name="CategoryLabel"
                        Text="Category: -"
                        FontFamily="OpenSansRegular"
                        FontSize="16"
                        TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                        HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
